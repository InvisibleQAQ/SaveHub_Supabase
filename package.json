{
  "name": "savehub",
  "version": "1.0.0",
  "description": "SaveHub RSS Reader - Monorepo",
  "private": true,
  "scripts": {
    "---FRONTEND---": "========================================",
    "frontend": "cd frontend && pnpm dev",
    "frontend:build": "cd frontend && pnpm build",
    "frontend:lint": "cd frontend && pnpm lint",

    "---BACKEND---": "========================================",
    "backend": "cd backend && uvicorn app.main:app --reload --port 8000",
    "backend:prod": "cd backend && uvicorn app.main:app --host 0.0.0.0 --port 8000",

    "---CELERY---": "========================================",
    "celery": "cd backend && celery -A app.celery_app worker --pool=solo --loglevel=info --queues=high,default",
    "flower": "cd backend && celery -A app.celery_app flower --port=5555",

    "---COMBINED---": "========================================",
    "dev": "concurrently -n next,api -c blue,green \"pnpm frontend\" \"pnpm backend\"",
    "dev:celery": "concurrently -n next,api,celery -c blue,green,yellow \"pnpm frontend\" \"pnpm backend\" \"pnpm celery\"",
    "dev:all": "concurrently -n next,api,celery,flower -c blue,green,yellow,magenta \"pnpm frontend\" \"pnpm backend\" \"pnpm celery\" \"pnpm flower\"",

    "---UTILITIES---": "========================================",
    "install:all": "pnpm install && cd frontend && pnpm install && cd ../backend && pip install -r requirements.txt",
    "redis:check": "redis-cli ping"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}
